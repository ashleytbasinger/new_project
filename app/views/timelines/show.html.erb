<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @timeline.title %>
</p>

<% @timeline.photos.each do |photo| %>
  <%= photo.title %>
  <%= image_tag photo.image %>  
<% end %>
<%= simple_form_for [@comment] do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end %>
<% @timeline.comments.each do |comment| %>
  <%= comment.content %>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_timeline_path(@timeline) %>
<% else %>
  <a href="<%= new_user_session_path %>">sign in to edit your timeline</a>
<% end %>

