
<% if user_signed_in? %>
  <%= form_for(@photo) do |f| %>
    <% if @photo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

        <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.date_select :date %>
    </div>
    <div class="field">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :timeline %><br>
      <%= f.collection_select :timeline_id, Timeline.all, :id, :title %><br><br>
    </div>
    <div class="actions">
      <%= f.submit "Create Photo", :class => "btn btn-success" %>
    </div>
  <% end %>
<% else %>
  <center><a href="<%= new_user_session_path %>">sign in to upload a photo</a></center>
<% end %>
